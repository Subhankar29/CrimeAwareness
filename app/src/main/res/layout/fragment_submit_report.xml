<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.subhankar29.crimeawareness.drawer.report.SubmitReport">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <!--Put form controls here-->

        <EditText
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject of the of the Crime"
            android:textSize="10pt">
        </EditText>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description of the of the Crime"
            android:textSize="10pt">
        </EditText>

        <Button
            android:id="@+id/ButtonCamera"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:onClick="sendFeedback"
            android:text="Camera"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:layout_marginBottom="42dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/ButtonLocation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="100dp"
            android:topLeftRadius="100dp"
            android:topRightRadius="100dp"
            android:layout_weight="1"/>


        <Spinner
            android:id="@+id/static_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:entries="@array/Department_name"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textSize="10pt">
        </TextView>

        <Button
            android:id="@+id/postButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:background="@drawable/roundedbuttons"/>

    </LinearLayout>

</ScrollView>

